<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle" parent="@style/AppTheme">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/margin_40</item>
        <item name="android:paddingRight">@dimen/margin_40</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@string/font_roboto_light</item>
    </style>

    <style name="ButtonStyle1" parent="@style/AppTheme">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingLeft">@dimen/margin_40</item>
        <item name="android:paddingRight">@dimen/margin_40</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@string/font_roboto_light</item>
    </style>

    <style name="ToolbarTitle" parent="@style/AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
    </style>

    <style name="Title" parent="@style/AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:fontFamily">@string/font_roboto_light</item>
    </style>

    <style name="TitleReverse" parent="@style/AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:fontFamily">@string/font_roboto_light</item>
    </style>

    <style name="TextOnly" parent="@style/AppTheme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
    </style>

    <style name="TextOnlyReverse" parent="@style/AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
    </style>

    <style name="FloatingEditText" parent="@style/AppTheme">
        <item name="android:background">@drawable/edit_text_bottom_line</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@string/font_roboto_light</item>
        <item name="android:paddingBottom">@dimen/margin_5</item>
        <item name="android:paddingLeft">@dimen/margin_30</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:paddingTop">@dimen/margin_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
    </style>

    <style name="FloatingEditTextOppsite" parent="@style/AppTheme">
        <item name="android:background">@drawable/edit_text_bottom_line_primary_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@string/font_roboto_light</item>
        <item name="android:paddingBottom">@dimen/margin_5</item>
        <item name="android:paddingLeft">@dimen/margin_30</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:paddingTop">@dimen/margin_10</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor_primary_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <dimen name="text_size_12">12sp</dimen>
    <dimen name="text_size_14">14sp</dimen>
</resources>
